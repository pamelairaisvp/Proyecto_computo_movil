<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="319dp"
        android:layout_height="157dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPitagoras"
        app:srcCompat="@drawable/pitagoras1" />

    <TextView
        android:id="@+id/tvPitagoras"
        android:layout_width="264dp"
        android:layout_height="81dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="56dp"
        android:text="@string/Pitagoras"
        android:textColor="#57319A"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valor_a"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Ingresa valor a"
        android:inputType="number"
        android:shadowColor="#FDFBFB"
        android:textColor="#F8F8F8"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/valor_b"
        android:layout_width="182dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="Ingresa valor b"
        android:inputType="number"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor_a"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/resultado_pitagoras"
        android:layout_width="121dp"
        android:layout_height="45dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="Resultado"
        android:inputType="number"
        android:shadowColor="#F4F2F2"
        android:textColor="#EDE9E9"
        android:textColorHint="#F8F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/boton_pitagoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="36dp"
        android:onClick="click"
        android:text="@string/Botonpitagoras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor_b" />

</androidx.constraintlayout.widget.ConstraintLayout>